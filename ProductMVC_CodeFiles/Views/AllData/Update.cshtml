@model ProductDAL.EntityLayer.Product


@{
    ViewData["Title"] = "Index";
}
<div style="align-items:center;text-align:center">
<form action="" method="post">
<table width="40%" align="center" cellpadding="5" border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Mfg Date</th>
        <th>Expiry Date</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Category</th>
        
    </tr>
    
     <tr>
        <td>@Model.Id</td>
        <td contenteditable="true"><input type="text" value="@Model.Name" asp-for="Name"/></td>
            <td><input type="date" value="@Model.MfgDate" asp-for="MfgDate"/></td>

            <td><input type="date" value="@Model.ExpiryDate" asp-for="ExpiryDate" /></td>

            <td><input type="number" value="@Model.Stock" asp-for="Stock" /></td>
        <td >
             <input type="number" value="@Model.Price" asp-for="Price"/>
            </td>

        <td >
                <input type="text" value="@Model.Category.Name"  />
            </td>
     </tr>
     <tr> 

     </tr>
    <tr >
        <td colspan="7" align="center">
                <input type="submit" value="submit" />
        </td>
        
    </tr>

   

</table>

</form>

</div>
